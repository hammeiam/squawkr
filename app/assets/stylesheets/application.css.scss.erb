@import "bootstrap-sprockets";
@import "bootstrap";
@import url(http://fonts.googleapis.com/css?family=Roboto:900);

$POSTWIDTH: 506px; // 440
$MINWIDTH: $POSTWIDTH + 20px;
$LIGHTBLACK: rgba(0, 0, 0, 0.8);
$GREY: rgba(0, 0, 0, 0.4);
$NAVGREEN: #16a085;
$imgKey: <%= Random.rand(5) + 1 %>;
$BACKGROUNDIMG: url("https://s3-us-west-1.amazonaws.com/squawkr/hero-background-#{$imgKey}-min.jpg");

body, html, main {
	margin: 0;
	padding: 0;
	height: 100%;
}

body:before {
	// preload background image
  content: $BACKGROUNDIMG;
  display:none;
}

ul {
	list-style-type: none;
	padding: 0;
}

.right {
	float: right;
}

.left {
	float: left;
}

.alert{
	margin: 0;
}

#content-wrapper{
	width: $MINWIDTH;
	margin: 0 auto;
}

.front {
	height: 100%;
	width: 100%;
	position: fixed;
	top: 0;
	left:0;
	z-index: -1;
	-webkit-box-shadow: inset 0px 0px 100px 10px rgba(0,0,0,0.75);
	-moz-box-shadow: inset 0px 0px 100px 10px rgba(0,0,0,0.75);
	box-shadow: inset 0px 0px 100px 10px rgba(0,0,0,0.75);

	background: $BACKGROUNDIMG no-repeat center center fixed;
	-webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  filter: blur(5px);
  -webkit-filter: opacity(80%);
  -moz-filter: opacity(80%);
  -o-filter: opacity(80%);
  -ms-filter: opacity(80%);
  filter: opacity(80%);
}

/* NAV */
nav {
	height: 45px;
	width: 100%;
	// padding-top: 15px;
	background-color: #16a085;
	color: #ecf0f1;
	a, a:hover, a:focus {
		color: white;
		text-decoration: none;
		outline: none; 
	}
	img{
		width: 30px;
		height: 30px;
		// margin-top: -10px; 
	}
	ul.nav-main{
		max-width: 60%;
		min-width: $MINWIDTH;
		height: 45px;
		margin: 0 20%;
		padding: 0;
		& > li {
			display: inline-block;
			margin: 0 10px;
			height: 30px;
			&.right {
				margin-top: 8px; 
			}
			&.left {
				margin-top: 5px; 
			}
			span {
				display: inline-block;
			}
		}
	}
}

h1.logo {
	color: white;
	font-family: Tahoma, Geneva, sans-serif;
	font-size: 30px;
	display: inline-block;
	margin: 0;
}

// .dropdown:hover ul.dropdown-menu {
//     display: block;
//  }

.btn-std{
	color: white !important;
	background: $NAVGREEN;
	width: 100%;
}

.btn-sm{
	@extend .btn-std;
	vertical-align: -webkit-baseline-middle;
	padding: 6px 15px;
	font-size: 14px;
	height: auto;
	border: 1px solid white;
}

.btn-sm:hover{
	color: white;
	background: lighten($NAVGREEN, 5%)
}

.btn-sm:focus{
	color: white;
	background: darken($NAVGREEN, 5%)
}
.dropdown-menu{
	top:110%;
	& > li a {
		color: $LIGHTBLACK;
	}
}
.dropdown-menu:before {
  position: absolute;
  top: -7px;
  left: 9px;
  display: inline-block;
  border-right: 7px solid transparent;
  border-bottom: 7px solid #ccc;
  border-left: 7px solid transparent;
  border-bottom-color: rgba(0, 0, 0, 0.2);
  content: '';
}

.dropdown-menu:after {
  position: absolute;
  top: -5px;
  left: 10px;
  display: inline-block;
  border-right: 6px solid transparent;
  border-bottom: 6px solid #ffffff;
  border-left: 6px solid transparent;
  content: '';
}

/* NAV: SEARCH BAR */
#search .typeahead {
	height: 30px;
	color: $LIGHTBLACK;
	width: 160px;
}

.tt-input {
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
     -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
          box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.tt-hint {
  color: #999
}

.tt-dropdown-menu {
  width: 320px;
  color: $LIGHTBLACK;
  margin-top: 4px;
  padding: 4px 0;
  background-color: #fff;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
  -webkit-box-shadow: 0 5px 10px rgba(0,0,0,.2);
     -moz-box-shadow: 0 5px 10px rgba(0,0,0,.2);
          box-shadow: 0 5px 10px rgba(0,0,0,.2);
}

.tt-suggestion, .tt-empty {
  padding: 3px 20px;
  line-height: 24px;
  a {
  	color: $GREY;
  }
  .grey {
		color: $GREY;
	}
}

.tt-suggestion.tt-cursor {
  color: #fff;
  background-color: $NAVGREEN;
  a, a:hover {
  	color: #fff;
  }
  .grey {
		color: #fff;
	}
}

.tt-suggestion p {
  margin: 0;
}

/* PAGE: POST */
.page-post-container {
	padding: 15px;
	background: white;
	border-bottom: 1px solid lightgrey;
}
h2.page-post, h2.page-post a {
	font-family: 'Roboto', sans-serif;
	font-weight: 700;
	font-size: 28px;
	color: $LIGHTBLACK;
	text-decoration: none;
	word-break: normal;
}
p.page-post {
	width: $POSTWIDTH;
	font-size: 14px;
	line-height: 18px;
	font-family: helvetica, sans-serif;
	color: $LIGHTBLACK;
	word-break: keep-all;
}
span.page-post, span.page-post a, span.page-post a:hover {
	font-style: italic;
	font-family: helvetica, sans-serif;
	color: $GREY;
}

.user-profile-container {
	padding: 15px;
	background: white;
	vertical-align: top;
	border-bottom: 1px solid lightgrey;
	border-left: 1px solid lightgrey;
	border-right: 1px solid lightgrey;
	-webkit-border-bottom-left-radius: 5px;
	-moz-border-radius-bottomleft: 5px;
	border-bottom-left-radius: 5px;
	-webkit-border-bottom-right-radius: 5px;
	-moz-border-radius-bottomright: 5px;
	border-bottom-right-radius: 5px;
	.profile-image {
		width: 48px;
		height: 48px;
	}
	.user-profile-text {
		display: inline-block;
		margin-left: 15px;
		& > * {
			margin: 0;
		}

	}
	img {
		vertical-align: inherit;
	}
}

.centered {
	text-align: center;
	margin: 30px 0;
}

/* MODALS */
.modal {
	text-align: center;
}
.modal-content {
	text-align: center;
	display: inline-block;
	h4 {
		color: $GREY;
	}
	textarea {
		@extend p.page-post;
		padding: 6px 12px;
		width: $POSTWIDTH + 22px; /*width is 440 + padding - borders */
		height: 250px + 12px; /* height is 220 + padding */
		resize: none;
		word-wrap: normal;
	}
	.form-control {
		border-radius: 0;
	}
	.form-group {
		text-align: left;
	}
	#post-lines-remaining {
		font-style: italic;
		font-family: 'Helvetica', sans-serif;
		color: $GREY;
		margin: 10px 0;
		float: right;		
		&.orange {
			color: orange;
		}
		&.red {
			color: red;
		}
	}
}



/* FRONT */
.hero-content {
	padding: 40px 0;
	text-align: center;
	h1 {
		font-size: 60px;
	}
	h1, h3 {
		color: white;
		text-shadow: 0px 0px 8px rgba(0, 0, 0, 0.5);
	}
	img {
		max-width: 460px;
		margin-bottom: 40px;
	}
	.btn-sm {
		margin: 30px auto; 
		border:none;
		padding: 20px 35px;
		font-size: 20px;
	}
	a.btn-sm, a.btn-sm:hover, a.btn-sm:focus {
			outline: none;
			text-decoration: none;
		}
}



