@import "bootstrap-sprockets";
@import "bootstrap";
@import url(http://fonts.googleapis.com/css?family=Roboto:900);

$MINWIDTH: 460px;
$LIGHTBLACK: rgba(0, 0, 0, 0.8);
$GREY: rgba(0, 0, 0, 0.4);

body, html {
	margin: 0;
	padding: 0;
}

body {
	/*background-color: #ecf0f1;*/
}

ul {
	list-style-type: none;
	padding: 0;
}

.right {
	float: right;
}

.left {
	float: left;
}

.alert{
	margin: 0;
}

#content-wrapper{
	width: $MINWIDTH;
	margin: 0 auto;
}

/* NAV */
nav {
	height: 45px;
	width: 100%;
	padding-top: 15px;
	background-color: #16a085;
	color: #ecf0f1;
	a, a:hover, a:focus {
		color: white;
		text-decoration: none;
		outline: none; 
	}
	img{
		width: 25px;
		height: 25px;
		margin-top: -10px; 
	}
	ul{
		/*list-style-type: none;*/
		/*max-width: 600px;*/
		max-width: 60%;
		min-width: $MINWIDTH;
		margin: 0 20%;
		padding: 0;
		li {
			display: inline-block;
			margin: 0 10px;
			span {
				display: inline-block;
				vertical-align: text-top;
			}
		}
	}
}

h1.logo {
	/*background-image:  url(<%= asset_path 'squawkr-logo-small.png' %>);
	background-repeat: no-repeat;
	background-position: center;
	width: 126px;
	height: 35px;*/
	color: white;
	font-family: Tahoma, Geneva, sans-serif;
	font-size: 30px;
	display: inline-block;
	margin: -10px 0 0 0;
}

/* PAGE: POST */
.page-post-container {
	padding: 15px;
	background: white;
	border-bottom: 1px solid lightgrey;
}
h2.page-post a {
	font-family: 'Roboto', sans-serif;
	font-weight: 700;
	font-size: 28px;
	color: $LIGHTBLACK;
	text-decoration: none;
}
p.page-post {
	width: 440px;
	font-size: 14px;
	line-height: 18px;
	font-family: helvetica, sans-serif;
	color: $LIGHTBLACK;
}
span.page-post {
	font-style: italic;
	font-family: helvetica, sans-serif;
	color: $GREY;
}

.user-profile-container {
	padding: 15px;
	background: white;
	vertical-align: top;
	border-bottom: 1px solid lightgrey;
	border-left: 1px solid lightgrey;
	border-right: 1px solid lightgrey;
	-webkit-border-bottom-left-radius: 5px;
	-moz-border-radius-bottomleft: 5px;
	border-bottom-left-radius: 5px;
	-webkit-border-bottom-right-radius: 5px;
	-moz-border-radius-bottomright: 5px;
	border-bottom-right-radius: 5px;
	.profile-image {
		width: 48px;
		height: 48px;
	}
	.user-profile-text {
		display: inline-block;
		margin-left: 15px;
		& > * {
			margin: 0;
		}

	}
	img {
		vertical-align: inherit;
	}
}

/* MODALS */
.modal {
	text-align: center;
}
.modal-content {
	text-align: center;
	display: inline-block;
	h4 {
		color: $GREY;
	}
	textarea {
		@extend p.page-post;
		padding: 6px 12px;
		width: 464px; /*width is 440 + padding*/
	}
	.form-control {
		border-radius: 0;
	}
}



