<div class="modal fade" 
	id="newPostModal" 
	tabindex="-1" 
	role="dialog" 
	aria-labelledby="myModalLabel" 
	aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
    	<div id="new-post-alerts-container-modal"></div>
    	<canvas id="canvas" width="440" height="220" style="display: none"></canvas>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
	        <span aria-hidden="true">&times;</span>
	        <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Create New Post</h4>
      </div>
      	<form id="create-new-post" class="form-horizontal" role="form">
	      <div class="modal-body">
	        
	       	<div class="form-group">
	       	  <div class="controls col-xs-12">
	  					<input 
	  					type='text' 
	  					name='post[post_title]'
	  					id="post-title-input" 
	  					placeholder='Title, up to 93 characters'
	  					class="form-control"
	  					maxlength="93">
  					</div>
				  </div>
				  
				  <div class="form-group">
	       	  <div class="controls col-xs-12">
	  					<textarea name='post[post_body]'
	  					placeholder="#Hashtags and @mentions will be extracted from your post and added to the Twitter status until the chracter limit is reached"
	  					class="form-control"
	  					id="post-body-input" >
	  					</textarea>
	  					<div class="controls col-xs-12">
			       	  <p id="post-lines-remaining"></p>
			       	</div>
  					</div>

				  </div>

	      <div class="modal-footer">
	      	<button type="button" class="btn btn-default left" data-dismiss="modal">
	        	Cancel
	        </button>
	        <button type="submit" class="btn btn-default">
	        	Create Post
	        </button>
	        
	      </div>
      </form>
    </div>
  </div>
</div>