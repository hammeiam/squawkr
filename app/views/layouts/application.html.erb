<!DOCTYPE html>
<html>
<head>
  <title>Bitter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<script type="text/javascript">
		<% if current_user %>
			var currentUser = new Bitter.Models.User({ id: <%= current_user.id %> })
			Bitter.users.add(currentUser);
			currentUser.fetch();
		<% end %>
	</script>

	<%= yield %>

</body>
</html>
